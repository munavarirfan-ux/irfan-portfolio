@media (max-width: 768px) {
    .about-head {
        text-align: left;
        /* Left align on mobile */
        margin-bottom: 60px;
    }

    .hero-headline {
        font-size: 40px;
    }
}

/* BENTO GRID LAYOUT */
.bento-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    /* 6 columns for flexibility */
    grid-auto-rows: minmax(280px, auto);
    gap: 24px;
    max-width: 1100px;
    margin: 0 auto;
}

/* Card Spanning Logic */
.card-hero {
    grid-column: span 4;
    grid-row: span 2;
}

.card-medium {
    grid-column: span 2;
    grid-row: span 1;
}

.card-small {
    grid-column: span 3;
    grid-row: span 1;
}

/* Hero Card Mock Scaling */
.card-hero .glass-sidebar,
.card-hero .glass-content {
    height: 260px;
    /* Taller for hero */
}



/* BENTO CARD SYSTEM */
.bento-card {
    position: relative;
    border-radius: 32px;
    background: rgba(15, 15, 20, 0.3);
    /* Liquid Glass */
    backdrop-filter: blur(20px) saturate(140%);
    -webkit-backdrop-filter: blur(20px) saturate(140%);
    box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.1),
        0 20px 40px -10px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.bento-card:hover {
    transform: scale(1.005);
    z-index: 10;
}

/* 1. GLOW STROKE (The Ring) */
.bento-card::before {
    content: "";
    position: absolute;
    inset: 0;
    padding: 1.5px;
    border-radius: 32px;
    /* Reduced Saturation Gradient */
    background: linear-gradient(115deg,
            rgba(0, 209, 255, 0.8),
            rgba(106, 92, 255, 0.8),
            rgba(255, 79, 216, 0.8),
            rgba(255, 138, 0, 0.8));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    z-index: 3;
    opacity: 0.1;
    /* Very subtle default */
    transition: opacity 0.6s ease;
}

/* 2. SOFT BLOOM (Outer Glow) */
.bento-card::after {
    content: "";
    position: absolute;
    inset: -1px;
    border-radius: 33px;
    background: linear-gradient(115deg, #00D1FF, #6A5CFF, #FF4FD8, #FF8A00);
    filter: blur(30px);
    /* Increased blur for diffusion */
    z-index: 0;
    opacity: 0;
    transition: opacity 0.6s ease;
}

.bento-card:hover::before {
    opacity: 0.5;
    /* Reduced max brightness */
}

.bento-card:hover::after {
    opacity: 0.15;
    /* Very faint bloom */
}

/* Cleanup old elements */
.card-glow,
.card-border {
    display: none;
}

/* THEMES */
.theme-indigo {
    --theme-glow: #5e5ce6;
    /* Indigo */
    --theme-accent: #5e5ce6;
}

.theme-blue {
    --theme-glow: #0a84ff;
    /* Blue */
    --theme-accent: #0a84ff;
}

.theme-teal {
    --theme-glow: #30d158;
    /* Teal/Greenish */
    --theme-accent: #30d158;
}

.theme-violet {
    --theme-glow: #bf5af2;
    /* Violet */
    --theme-accent: #bf5af2;
}

.theme-neutral {
    --theme-glow: #98989d;
    /* Gray */
    --theme-accent: #ffffff;
}

/* CONTENT LAYAOUT */
.card-visual {
    flex: 1;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 180px;
    z-index: 1;
}

.card-content {
    position: relative;
    padding: 24px 32px 32px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
    z-index: 2;
}

.card-eyebrow {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    color: var(--theme-accent);
    margin-bottom: 8px;
    display: block;
    opacity: 0.9;
}

.bento-card h3 {
    margin: 0 0 8px 0;
    font-size: 22px;
    font-weight: 600;
    color: #fff;
    letter-spacing: -0.01em;
}

.bento-card p {
    margin: 0;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.5;
}

/* DIAGRAMMATIC SYSTEM VISUALS */

/* Shared Container */
.card-visual {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;
    background: transparent;
}

.card-content {
    position: relative;
    z-index: 2;
    margin-top: auto;
    background: linear-gradient(to bottom, transparent 0%, rgba(12, 12, 15, 0.6) 30%, rgba(12, 12, 15, 0.98) 100%);
    padding: 32px;
}


/* 1. SYSTEMS: Isometric Connectivity */
.sys-diagram {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300px;
    height: 300px;
    transform: translate(-50%, -60%) perspective(1000px) rotateX(60deg) rotateZ(45deg);
    transform-style: preserve-3d;
}

.sys-node {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #1c1c1e;
    border: 1.5px solid #5e5ce6;
    border-radius: 50%;
    z-index: 2;
    box-shadow: 0 0 10px rgba(94, 92, 230, 0.3);
}

.n1 {
    top: 20%;
    left: 20%;
}

.n2 {
    top: 50%;
    left: 50%;
}

.n3 {
    top: 80%;
    left: 80%;
}

.sys-connector {
    position: absolute;
    background: rgba(94, 92, 230, 0.2);
    z-index: 1;
}

.c1 {
    top: 25%;
    left: 25%;
    width: 2px;
    height: 35%;
    transform-origin: top left;
    transform: rotate(-45deg);
}

.c2 {
    top: 55%;
    left: 55%;
    width: 2px;
    height: 35%;
    transform-origin: top left;
    transform: rotate(-45deg);
}

.sys-signal {
    position: absolute;
    width: 6px;
    height: 6px;
    background: #fff;
    border-radius: 50%;
    top: 20%;
    left: 20%;
    z-index: 3;
    box-shadow: 0 0 10px #fff;
    animation: signal-flow 4s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes signal-flow {
    0% {
        top: 20%;
        left: 20%;
        opacity: 0;
    }

    10% {
        opacity: 1;
    }

    45% {
        top: 50%;
        left: 50%;
    }

    90% {
        top: 80%;
        left: 80%;
        opacity: 1;
    }

    100% {
        top: 80%;
        left: 80%;
        opacity: 0;
    }
}


/* 2. CLARITY: Hierarchy Focus */
.clarity-scene {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.clarity-item {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.02);
    border-radius: 12px;
    transform: scale(0.8);
    transition: opacity 0.5s ease;
}

.blur-1 {
    transform: translate(-80px, -40px) scale(0.7);
    opacity: 0.2;
}

.blur-2 {
    transform: translate(80px, 30px) scale(0.6);
    opacity: 0.15;
}

.blur-3 {
    transform: translate(-30px, 90px) scale(0.5);
    opacity: 0.1;
}

.clarity-focus {
    position: relative;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, rgba(10, 132, 255, 0.1), rgba(10, 132, 255, 0.02));
    border: 1px solid #0a84ff;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    box-shadow: 0 0 30px rgba(10, 132, 255, 0.15);
}

.focus-marker {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0 0 20px rgba(10, 132, 255, 0.6);
}

.bento-card:hover .clarity-item {
    opacity: 0.05;
}

.bento-card:hover .clarity-focus {
    transform: scale(1.05);
    transition: transform 0.5s ease;
}


/* 3. SCALE: Modular Matrix */
.scale-matrix {
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
}

.scale-row {
    display: flex;
    gap: 8px;
}

.s-block {
    width: 32px;
    height: 20px;
    background: rgba(48, 209, 88, 0.1);
    border: 1px solid rgba(48, 209, 88, 0.3);
    border-radius: 4px;
    /* transition: background 0.3s ease; */
}

.r1 .s-block {
    opacity: 1;
}

.r2 .s-block {
    opacity: 0.5;
}

.r3 .s-block {
    opacity: 0.2;
}

/* Animation: Expansion */
.scale-matrix:hover .r2 .s-block {
    opacity: 0.8;
}

.scale-matrix:hover .r3 .s-block {
    opacity: 0.6;
}


/* 4. VELOCITY: Sequential Track */
.velo-track {
    position: absolute;
    top: 45%;
    left: 10%;
    right: 10%;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.track-line {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    z-index: 0;
}

.velo-step {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #1c1c1e;
    border: 1px solid rgba(255, 255, 255, 0.3);
    z-index: 2;
    transition: border-color 0.3s ease, background 0.3s ease;
}

.velo-pulse {
    position: absolute;
    top: 50%;
    left: 0;
    width: 30px;
    height: 2px;
    background: #bf5af2;
    transform: translateY(-50%);
    box-shadow: 0 0 10px #bf5af2;
    animation: track-progress 3s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes track-progress {
    0% {
        left: 0%;
        width: 20px;
        opacity: 0;
    }

    20% {
        opacity: 1;
    }

    80% {
        left: 100%;
        width: 20px;
        opacity: 1;
    }

    100% {
        left: 100%;
        width: 5px;
        opacity: 0;
    }
}


/* 5. CRAFT: Precision Guides */
.craft-canvas {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.craft-guide {
    position: absolute;
    background: rgba(255, 255, 255, 0.15);
}

.craft-guide.v {
    width: 1px;
    height: 100%;
}

.craft-guide.h {
    width: 100%;
    height: 1px;
}

.craft-target {
    position: relative;
    width: 80px;
    height: 80px;
    /* No border, just corners */
}

.target-corner {
    position: absolute;
    width: 10px;
    height: 10px;
    border-color: #fff;
    border-style: solid;
    transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.tl {
    top: 0;
    left: 0;
    border-width: 1px 0 0 1px;
}

.tr {
    top: 0;
    right: 0;
    border-width: 1px 1px 0 0;
}

.bl {
    bottom: 0;
    left: 0;
    border-width: 0 0 1px 1px;
}

.br {
    bottom: 0;
    right: 0;
    border-width: 0 1px 1px 0;
}

.bento-card:hover .craft-target {
    width: 90px;
    height: 90px;
}

.bento-card:hover .target-corner {
    border-color: rgba(255, 255, 255, 0.8);
    border-width: 2px;
    /* Thicker on focus */
}


/* Animations (Reveal) */
.bento-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.2, 0.8, 0.2, 1), transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    will-change: opacity, transform;
}

.bento-card.in {
    opacity: 1;
    transform: translateY(0);
}

/* Responsive */
@media (max-width: 900px) {
    .bento-grid {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
    }

    .card-hero,
    .card-medium,
    .card-small {
        grid-column: span 1;
        grid-row: span 1;
    }

    .card-visual {
        min-height: 200px;
    }
}

/* Responsive */
@media (max-width: 900px) {
    .about-grid {
        grid-template-columns: 1fr;
    }

    .about-card {
        flex-direction: row;
        align-items: center;
        height: auto;
    }

    .card-visual {
        width: 100px;
        height: 100px;
        flex-shrink: 0;
    }

    .card-content {
        padding: 20px;
    }
}


/* SYMBOLIC LIVING SYSTEMS */

/* Shared Container Override */
.card-visual {
    background: transparent;
}


/* 1. SYSTEMS: Architecture Stack (Floating Planes) */
.sys-stack {
    position: absolute;
    inset: 0;
    perspective: 1000px;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Tilted View */
    transform: rotateX(10deg) rotateY(-5deg);
    transform-style: preserve-3d;
}

.sys-plane {
    position: absolute;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(94, 92, 230, 0.1), rgba(172, 26, 240, 0.05));
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(4px);
    transition: transform 0.5s ease;
}

/* Plane Hierarchy */
.plane-bot {
    width: 220px;
    height: 140px;
    transform: translateZ(-40px);
    background: linear-gradient(135deg, rgba(28, 28, 78, 0.4), rgba(0, 0, 0, 0.2));
    opacity: 0.6;
}
}


/* 2. CLARITY: Attention Convergence */
.sym-focus {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.focus-core {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0 0 50px rgba(10, 132, 255, 0.5);
    z-index: 2;
    animation: pulse-core 5s ease-in-out infinite;
}

.focus-blur {
    position: absolute;
    border-radius: 50%;
    background: var(--theme-glow);
    filter: blur(30px);
    opacity: 0.4;
}

.b1 {
    width: 120px;
    height: 120px;
    transform: translate(-30px, -20px);
    animation: drift 10s ease-in-out infinite alternate;
}

.b2 {
    width: 160px;
    height: 160px;
    transform: translate(40px, 30px);
    animation: drift 12s ease-in-out infinite alternate-reverse;
}

.focus-ring {
    position: absolute;
    width: 200px;
    height: 200px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: spin 60s linear infinite;
}

@keyframes pulse-core {

    0%,
    100% {
        transform: scale(0.95);
        opacity: 0.8;
    }

    50% {
        transform: scale(1.05);
        opacity: 1;
        box-shadow: 0 0 80px rgba(10, 132, 255, 0.8);
    }
}

@keyframes drift {
    0% {
        transform: translate(0, 0);
    }

    100% {
        transform: translate(20px, 20px);
    }
}

@keyframes spin {
    100% {
        transform: rotate(360deg);
    }
}

/* 3. SCALE: Adaptive Grid */
.sym-grid {
    position: absolute;
    inset: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 16px;
    padding: 15%;
    transform: rotate(15deg) scale(1.1);
}

.sym-cell {
    width: 40px;
    height: 40px;
    background: rgba(48, 209, 88, 0.15);
    border-radius: 8px;
    transition: opacity 0.5s;
}

.c1 {
    animation: cell-fade 4s ease-in-out infinite 0s;
}

.c2 {
    animation: cell-fade 4s ease-in-out infinite 1s;
}

.c3 {
    animation: cell-fade 4s ease-in-out infinite 2s;
}

.c4 {
    animation: cell-fade 4s ease-in-out infinite 0.5s;
}

.c5 {
    animation: cell-fade 4s ease-in-out infinite 1.5s;
}

.c6 {
    animation: cell-fade 4s ease-in-out infinite 2.5s;
}

@keyframes cell-fade {

    0%,
    100% {
        opacity: 0.1;
        transform: scale(0.9);
    }

    50% {
        opacity: 0.7;
        transform: scale(1);
        background: rgba(48, 209, 88, 0.3);
    }
}


/* 4. VELOCITY: Acceleration Field */
.sym-accel {
    position: absolute;
    inset: 0;
    transform: skewX(-15deg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 15%;
}

.accel-trail {
    height: 4px;
    background: linear-gradient(to right, transparent, var(--theme-accent), transparent);
    opacity: 0.3;
    margin: 20px 0;
    border-radius: 4px;
}

.t1 {
    width: 50%;
    animation: trail-shoot 3s cubic-bezier(0.1, 0, 0.1, 1) infinite;
}

.t2 {
    width: 30%;
    animation: trail-shoot 4s cubic-bezier(0.1, 0, 0.1, 1) infinite 1s;
}

.t3 {
    width: 70%;
    animation: trail-shoot 2.5s cubic-bezier(0.1, 0, 0.1, 1) infinite 0.5s;
}

@keyframes trail-shoot {
    0% {
        transform: translateX(-50px) scaleX(0.5);
        opacity: 0;
    }

    50% {
        opacity: 1;
    }

    100% {
        transform: translateX(200px) scaleX(1.2);
        opacity: 0;
    }
}


/* 5. CRAFT: Precision Alignment */
.sym-precision {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.prec-guide {
    position: absolute;
    background: rgba(255, 255, 255, 0.15);
}

.x {
    width: 100%;
    height: 1px;
    top: 50%;
}

.y {
    width: 1px;
    height: 100%;
    left: 50%;
}

.prec-target {
    width: 70px;
    height: 70px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: snap-focus 6s ease-in-out infinite;
}

@keyframes snap-focus {

    0%,
    100% {
        width: 70px;
        height: 70px;
        border-color: rgba(255, 255, 255, 0.3);
    }

    45% {
        width: 50px;
        height: 50px;
        border-color: rgba(255, 255, 255, 0.8);
    }

    50% {
        width: 52px;
        height: 52px;
        border-color: #fff;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.4);
    }

    /* Snap */
    55% {
        width: 50px;
        height: 50px;
        border-color: rgba(255, 255, 255, 0.8);
    }
}


/* HOVER: Subtle lift & Brighten */
.bento-card:hover .sym-spine,
.bento-card:hover .sym-focus,
.bento-card:hover .sym-grid,
.bento-card:hover .sym-accel,
.bento-card:hover .sym-precision {
    opacity: 1;
    filter: brightness(1.3);
    transition: opacity 0.4s ease, filter 0.4s ease;
}