/* Global Styles */
/* =========================
   GLOBAL RESET
   ========================= */
html,
body {
    height: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    overflow-y: auto;
    /* Force vertical scroll */
    background: black;
}

canvas {
    pointer-events: none;
    /* Ensure particles don't block scroll */
}

body,
html {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    color: white;
}

/* Hero Section */
.hero {
    height: 100vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    /* Ensure hero content is above particles if z-index is used on children, but hero is transparent so it's fine */
    z-index: 1;
    /* Content sits on top */
}

#particles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    /* Behind content */
    pointer-events: none;
    /* Allow clicking through if needed */
}

.hero-title {
    font-size: clamp(2.6rem, 6vw, 4.8rem);
    font-weight: 650;
    line-height: 1.05;
    letter-spacing: -0.02em;
    text-align: center;
    margin: 0;

    /* Apple Intelligence-style multi-stop gradient */
    background: linear-gradient(90deg,
            #0aa2ff 0%,
            #5b7cff 18%,
            #a86bff 36%,
            #ff5bbd 56%,
            #ff6a4a 74%,
            #ffb11a 100%);

    background-size: 240% 100%;
    background-position: 0% 50%;

    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;

    animation: appleGradientFlow 14s ease-in-out infinite;
    position: relative;
    filter: saturate(0.85) brightness(1.05);
}

.hero-title::after {
    content: "";
    position: absolute;
    inset: -12%;
    pointer-events: none;

    background: linear-gradient(120deg,
            transparent 0%,
            rgba(255, 255, 255, 0.20) 45%,
            transparent 60%);

    mix-blend-mode: screen;
    filter: blur(12px);
    opacity: 0.25;

    animation: appleLightSweep 7.5s ease-in-out infinite;
}

@keyframes appleGradientFlow {
    0% {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }
}

@keyframes appleLightSweep {
    0% {
        transform: translateX(-35%);
        opacity: 0;
    }

    25% {
        opacity: 0.25;
    }

    55% {
        transform: translateX(35%);
        opacity: 0.18;
    }

    100% {
        transform: translateX(35%);
        opacity: 0;
    }
}

.hero .subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    margin-top: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: -0.01em;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.hero-content {
    max-width: 1000px;
    width: 100%;
}

/* .calm-text removed as gradient is now on H1 */



/* Typewriter Cursor */
.typewriter-cursor {
    display: inline-block;
    margin-left: 2px;
    font-weight: 650;
    /* Match headline weight for better visibility */

    /* Apple Intelligence-style gradient */
    background: linear-gradient(90deg,
            #0aa2ff 0%,
            #5b7cff 18%,
            #a86bff 36%,
            #ff5bbd 56%,
            #ff6a4a 74%,
            #ffb11a 100%);
    background-size: 240% 100%;
    background-position: 0% 50%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;

    /* Combined blink (1s) and gradient flow (14s) */
    animation: blink 1s step-end infinite, appleGradientFlow 14s ease-in-out infinite;
}

@keyframes blink {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0;
    }
}

/* HERO ENTRANCE */
.hero-enter,
.hero-enter-2,
.scroll-cta {
    opacity: 0;
    transform: translateY(14px);
    filter: blur(6px);
}

.hero-enter.is-in,
.hero-enter-2.is-in,
.scroll-cta.is-in {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
    transition: opacity 700ms ease, transform 700ms ease, filter 700ms ease;
}

.hero-enter.is-in {
    transition-delay: 120ms;
}

.hero-enter-2.is-in {
    transition-delay: 650ms;
}

.scroll-cta.is-in {
    transition-delay: 900ms;
}

/* Scroll CTA Button */
.scroll-cta {
    margin-top: 22px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.14);
    color: rgba(255, 255, 255, 0.9);
    padding: 10px 14px;
    border-radius: 999px;
    cursor: pointer;
    backdrop-filter: blur(10px);
    font-size: 14px;
    font-weight: 500;
}

.scroll-cta:hover {
    background: rgba(255, 255, 255, 0.10);
}


/* Accessibility */
@media (prefers-reduced-motion: reduce) {

    .hero-enter,
    .hero-enter-2,
    .scroll-cta {
        opacity: 1 !important;
        transform: none !important;
        filter: none !important;
        transition: none !important;
    }
}


/* =========================
   WORK SECTION (Redesign)
========================= */

.work {
    padding: 110px 24px 60px;
    background: black;
    position: relative;
    overflow: hidden;
    /* Prevent horizontal scrollbar on body */
}

.work-inner {
    max-width: 1180px;
    margin: 0 auto;
}

.work-head {
    margin-bottom: 26px;
    padding-left: 12px;
    /* Visual alignment with rail padding */
}

.section-title {
    font-size: 44px;
    font-weight: 700;
    letter-spacing: -0.03em;
    color: white;
    margin: 0;
}

.section-subtitle {
    margin-top: 10px;
    color: rgba(255, 255, 255, 0.55);
    font-size: 14px;
}

.work-carousel {
    position: relative;
    margin-top: 34px;
}

/* Horizontal Scroll Rail */
.work-rail {
    display: flex;
    gap: 28px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding: 12px 14px 40px;
    /* Bottom padding for shadow */
    -webkit-overflow-scrolling: touch;

    /* Hide scrollbars */
    scrollbar-width: none;
    -ms-overflow-style: none;
}

.work-rail::-webkit-scrollbar {
    display: none;
}

/* Apple Style Card (Apple Intelligence Glow) */
.work-card {
    flex: 0 0 auto;
    scroll-snap-align: center;
    width: min(900px, 86vw);
    height: 520px;
    position: relative;
    cursor: pointer;
    z-index: 1;
    border-radius: 34px;
    transform: translateZ(0);
    transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* Inner Container - Dark & Clean */
.work-card-inner {
    position: absolute;
    inset: 0;
    border-radius: 34px;
    overflow: hidden;
    /* Neutral dark base to make colors pop */
    background: rgba(20, 20, 20, 0.6);
    /* Faint inner border for definition */
    border: 1px solid rgba(255, 255, 255, 0.06);
    box-shadow: 0 22px 60px rgba(0, 0, 0, 0.55);
    z-index: 2;
    transform: translateZ(0);
}

.work-card:focus-visible .work-card-inner {
    outline: 2px solid white;
    outline-offset: 4px;
}

/* 1. GLOW STROKE (The Ring) */
.work-card::before {
    content: "";
    position: absolute;
    inset: 0;
    padding: 1.5px;
    /* Stroke thickness */
    border-radius: 34px;
    /* Apple Intelligence Spectrum */
    background: linear-gradient(115deg, #00D1FF, #6A5CFF, #FF4FD8, #FF8A00);
    /* Mask trick to show only the border */
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    z-index: 3;
    /* sits on top of inner border */
    opacity: 0.15;
    /* Subtle when inactive */
    transition: opacity 0.5s ease;
}

/* 2. SOFT BLOOM (Outer Glow) */
.work-card::after {
    content: "";
    position: absolute;
    inset: -1px;
    border-radius: 35px;
    background: linear-gradient(115deg, #00D1FF, #6A5CFF, #FF4FD8, #FF8A00);
    filter: blur(20px);
    z-index: 0;
    /* Behind card */
    opacity: 0;
    /* Hidden implies off when inactive */
    transition: opacity 0.5s ease;
}

/* Interaction States */
.work-card:hover {
    transform: scale(1.01);
}

.work-card:hover::before,
.work-card:focus-visible::before {
    opacity: 0.85;
    /* Crisp visible stroke */
}

.work-card:hover::after,
.work-card:focus-visible::after {
    opacity: 0.35;
    /* Soft bloom appears */
}

/* Card Visuals (Gradients) */
.work-media {
    position: absolute;
    inset: 0;
    height: 70%;
    background-size: cover;
    background-position: center;
}

.media-fintech {
    background: radial-gradient(1200px 500px at 20% 10%, rgba(120, 80, 255, 0.55), transparent 55%), linear-gradient(135deg, rgba(35, 25, 60, 1), rgba(0, 0, 0, 1));
}

.media-ai {
    background: radial-gradient(1200px 500px at 20% 10%, rgba(0, 255, 200, 0.25), transparent 60%), linear-gradient(135deg, rgba(10, 30, 35, 1), rgba(0, 0, 0, 1));
}

.media-saas {
    background: radial-gradient(1200px 500px at 20% 10%, rgba(255, 120, 200, 0.25), transparent 60%), linear-gradient(135deg, rgba(40, 10, 30, 1), rgba(0, 0, 0, 1));
}

/* Text Overlay */
.work-overlay {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 26px 28px 32px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.8) 40%, rgba(0, 0, 0, 0));
}

.work-tag {
    display: inline-block;
    font-size: 11px;
    letter-spacing: 0.18em;
    color: rgba(255, 255, 255, 0.55);
    margin-bottom: 10px;
    text-transform: uppercase;
    font-weight: 600;
}

.work-title {
    font-size: 28px;
    font-weight: 650;
    letter-spacing: -0.02em;
    color: white;
    margin: 0;
    line-height: 1.1;
}

.work-desc {
    margin-top: 8px;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.68);
    line-height: 1.5;
    max-width: 90%;
}

/* Nav Arrows */
.work-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(20, 20, 20, 0.65);
    color: rgba(255, 255, 255, 0.85);
    cursor: pointer;
    font-size: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 2px;
    /* Center the symbol */
    opacity: 0;
    pointer-events: none;
    transition: opacity 280ms ease, transform 180ms ease, background 180ms ease;
    backdrop-filter: blur(12px);
    z-index: 10;
}

.work-carousel:hover .work-nav {
    opacity: 1;
    pointer-events: auto;
}

.work-prev {
    left: -20px;
}

.work-next {
    right: -20px;
}

.work-nav:hover {
    transform: translateY(-50%) scale(1.1);
    background: rgba(255, 255, 255, 0.15);
}

/* Pagination Dots */
.work-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 10px;
}

.work-dot {
    width: 8px;
    height: 8px;
    border-radius: 99px;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background 0.3s ease, transform 0.3s ease;
}

.work-dot:hover {
    background: rgba(255, 255, 255, 0.4);
}

.work-dot.is-active {
    background: rgba(255, 255, 255, 0.9);
    transform: scale(1.1);
}

@media (max-width: 900px) {
    .section-title {
        font-size: 32px;
    }

    .work-nav {
        display: none;
    }

    /* Hide arrows on touch */
    .work-card {
        height: 480px;
        border-radius: 28px;
        width: 88vw;
    }

    .work-rail {
        scroll-padding-left: 24px;
        /* Align first card */
        padding-left: 24px;
        gap: 16px;
    }

    .work-head {
        padding-left: 24px;
    }
}

/* === PAGE SNAP SCROLL === */
html,
body {
    height: 100%;
}

body {
    overflow: hidden;
    /* important: the .page becomes the scroll container */
}

#particles {
    position: fixed;
    inset: 0;
    z-index: 0;
}

.page {
    position: relative;
    z-index: 1;
    height: 100vh;
    overflow-y: auto;
    scroll-snap-type: y mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
}

.section {
    min-height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
}

/* === HERO LEAVE EFFECT (subtle) === */
.hero {
    position: relative;
}

.hero-content {
    will-change: transform, opacity;
    transition: transform 500ms cubic-bezier(.2, .8, .2, 1), opacity 500ms cubic-bezier(.2, .8, .2, 1);
}

.hero.is-leaving .hero-content {
    opacity: 0.55;
    transform: scale(0.985);
}

/* === SCROLL CUE === */
.scroll-cue {
    position: absolute;
    left: 50%;
    bottom: 32px;
    transform: translateX(-50%);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 14px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.10);
    color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    cursor: pointer;
    transition: transform 200ms ease, background 200ms ease;
    z-index: 10;
}

.scroll-cue:hover {
    transform: translateX(-50%) translateY(-2px);
    background: rgba(255, 255, 255, 0.08);
}

.scroll-cue-dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: linear-gradient(90deg, #0aa2ff, #ffb11a);
    box-shadow: 0 0 18px rgba(255, 177, 26, 0.25);
    animation: cuePulse 1.6s ease-in-out infinite;
}

@keyframes cuePulse {

    0%,
    100% {
        transform: scale(1);
        opacity: .85;
    }

    50% {
        transform: scale(1.35);
        opacity: 1;
    }
}

/* === WORK REVEAL === */
.reveal {
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 600ms cubic-bezier(.2, .8, .2, 1), transform 600ms cubic-bezier(.2, .8, .2, 1);
}

.reveal.in {
    opacity: 1;
    transform: translateY(0);
}

.work-grid>* {
    opacity: 0;
    transform: translateY(18px);
    transition: opacity 650ms cubic-bezier(.2, .8, .2, 1), transform 650ms cubic-bezier(.2, .8, .2, 1);
}

.work-rail.in {
    /* Added support for rail reveal */
    opacity: 1;
    transform: translateY(0);
}

.work-rail {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.work-grid>*.in {
    opacity: 1;
    transform: translateY(0);
}

.card-visual {
    height: 60%;
    /* Proportional height */
    width: 100%;
}

.fintech-gradient {
    background: linear-gradient(135deg, #102d4e 0%, #000000 100%);
    position: relative;
}

.fintech-gradient::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 30% 30%, rgba(60, 140, 255, 0.2), transparent 60%);
}

.ai-gradient {
    background: linear-gradient(135deg, #2e1025 0%, #000000 100%);
    position: relative;
}

.ai-gradient::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 70% 30%, rgba(255, 80, 190, 0.15), transparent 60%);
}

.saas-gradient {
    background: linear-gradient(135deg, #102e2e 0%, #000000 100%);
    position: relative;
}

.saas-gradient::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, rgba(80, 200, 255, 0.15), transparent 60%);
}

/* Card Content Area */
.card-info {
    padding: 24px 32px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.card-eyebrow {
    text-transform: uppercase;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 8px;
}

.card-title {
    font-size: 24px;
    font-weight: 600;
    color: #fff;
    margin: 0 0 6px 0;
    letter-spacing: -0.01em;
}

.card-desc {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    max-width: 400px;
}

/* CONTROLS */

/* Arrows */
.carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(40, 40, 40, 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0;
    /* Hidden by default, shown on container hover */
    transition: all 0.3s ease;
}

.carousel-container:hover .carousel-arrow {
    opacity: 1;
}

.carousel-arrow:hover {
    background: rgba(60, 60, 60, 0.6);
    transform: translateY(-50%) scale(1.1);
}

.carousel-arrow.prev {
    left: 40px;
}

.carousel-arrow.next {
    right: 40px;
}

/* Pagination Dots */
.carousel-dots {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 24px;
}

.carousel-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
}

.carousel-dot.active {
    background: #fff;
    transform: scale(1.2);
}

.carousel-dot:hover {
    background: rgba(255, 255, 255, 0.4);
}

/* RESPONSIVE */
@media (max-width: 900px) {
    .carousel-container {
        /* Remove mask on mobile to see full edges */
        mask-image: none;
        -webkit-mask-image: none;
    }

    .carousel-track {
        padding: 0 24px;
        /* Normal padding */
        gap: 16px;
    }

    .carousel-card {
        flex: 0 0 85vw;
        /* Almost full width */
        height: 380px;
    }

    .carousel-arrow {
        display: none;
        /* Hide arrows on touch */
    }
}

/* ===========================
   ABOUT SECTION (Luminous)
=========================== */

.about {
    position: relative;
    padding: 40px 24px 80px;
    min-height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
    background: #000;
    /* Deep black base */
}

.about-inner {
    max-width: 1100px;
    margin: 0 auto;
}

/* Typography (Apple Style) */
.about-head {
    max-width: 800px;
    margin: 0 auto 40px;
    text-align: center;
    /* Center on large screens */
}

.hero-eyebrow {
    display: block;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #ffb43c;
    /* Warm accent */
    margin-bottom: 16px;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.hero-headline {
    font-size: 56px;
    font-weight: 500;
    /* Regular/Medium */
    line-height: 1.05;
    color: #ffffff;
    margin: 0;
    letter-spacing: -0.015em;
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 0.8s cubic-bezier(0.2, 0.8, 0.2, 1), transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
